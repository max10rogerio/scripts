DECLARE @NOVOID INT
SET @NOVOID = 0

SELECT 
	(
		SELECT 
			(@NOVOID+ROW_NUMBER()OVER (ORDER BY C.CODCOLIGADA ASC)) 'ID',
			G.CGC 'V_CNPJCREDOR',
			C.CGCCFO 'V_DOCUMENTO',
			C.NOME 'V_NOME'
		FROM FCFO C 
			 INNER JOIN GCOLIGADA G ON G.CODCOLIGADA = C.CODCOLIGADA
		WHERE C.NOME LIKE '%MAX%'
		
		FOR XML PATH('DEVEDOR'), TYPE /*-- cria uma sub tag e convert pra xml tamb√©m --*/
	) 
FOR XML PATH('DEVEDORES') /*-- root tag --*/
